<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.ProfileActivity">
  <ImageView
      android:id="@+id/btn_back_profile"
      android:layout_width="@dimen/_25sdp"
      android:layout_height="@dimen/_25sdp"
      android:layout_marginStart="@dimen/_20sdp"
      android:layout_marginTop="@dimen/_20sdp"
      android:layout_marginEnd="@dimen/_20sdp"
      android:layout_marginBottom="@dimen/_20sdp"
      android:src="@drawable/arrow_left" />
  <ImageView
      android:layout_width="@dimen/_20sdp"
      android:layout_height="@dimen/_20sdp"
      android:src="@drawable/edit"
    android:layout_marginStart="@dimen/_180sdp"
    android:layout_marginTop="@dimen/_175sdp"
    android:background="@color/purple_200"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/btn_back_profile"
      android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_150sdp"
        android:src="@drawable/profile"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:text="Edward Lerray"
      android:layout_gravity="center"
      android:fontFamily="@font/poppinsbold"
      android:textSize="@dimen/_20sdp"/>
  </LinearLayout>
  </RelativeLayout>